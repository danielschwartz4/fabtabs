{
  "manifest_version": 3,

  "name": "Fabtabs",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "0.0.0.2",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": { "16": "icon.png", "14": "icon.png", "32": "icon.png" },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "execute-highlight": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Highlight selected text"
    }
  },
  "permissions": ["storage", "contextMenus"],

  "host_permissions": ["<all_urls>"]
}
